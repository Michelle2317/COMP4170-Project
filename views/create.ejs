<%- include('../partials/header') %>
<body>
	<header>
		<h1>Write New Entry</h1>
	</header>
	<form action="/add" method="POST">
		<div class="form-group">
			<label class="title">Title</label>
			<input type="text" name="entry_title" required />
		</div>
		<div class="form-group">
			<label class="content">Content</label>
			<textarea name="entry_content" rows="5" required></textarea>
		</div>
		<button type="submit" class="button">Submit Entry</button>
	</form>
</body>
