<%- include('../partials/header') %>
<body>
	<header>
		<h1>Add New Entry</h1>
	</header>
	<form action="/create" method="POST">
		<div class="form-group">
			<label class="title">Title</label>
			<input type="text" name="entry_title" required />
		</div>
		<div class="form-group">
			<label class="content">Content</label>
			<textarea
				name="entry_content"
				rows="5"
				required
			></textarea>
		</div>
		<div class="edit-buttons"> 
			<button class="button-noback">
				<a href="/dashboard">Cancel</a>
			</button>
			<button type="submit" class="button">Submit Entry</button>
		</div>
	</form>
</body>
