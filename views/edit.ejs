<%- include('../partials/header') %>
<body>
	<header>
		<h1>Edit Entry</h1>
	</header>
	<form action="/edit" method="POST">
		<div class="form-group">
			<input type="hidden" name="entryId" value="<%= entryId %>" />
			<label for="entry_title">Title</label>
			<input
				type="text"
				name="entry_title"
				value="<%= entryTitle %>"
				required
			/>
		</div>
		<div class="form-group">
			<label class="content">Content</label>
			<textarea id="entry_content" name="entry_content" required><%= entryContent %></textarea>
		</div>

		<div class="edit-buttons"> 
			<button class="button-noback">
				<a href="/dashboard">Cancel</a>
			</button>
			<button class="button" type="submit">Save Entry</button>
		</div>
	</form>
</body>





		
