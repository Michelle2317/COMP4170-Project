<%- include('../partials/header') %>
<body>
	<header>
		<h1>Edit Entry</h1>
	</header>
	<form action="/add" method="POST" id="edit-form">
		<div class="form-group">
			<label class="title">Title</label>
			<input
				type="text"
				name="entry_title"
				value="Diary Title"
				required
			/>
		</div>
		<div class="form-group">
			<label class="content">Content</label>
			<textarea name="entry_content" rows="5" required>
Diary Content
            </textarea>
		</div>
	</form>
	<button class="button">
		<!-- Goes back to the user's dashboard -->
		<a href="/dashboard">Cancel</a>
	</button>
	<button type="submit" class="button" form="edit-form">Save Entry</button>
</body>
