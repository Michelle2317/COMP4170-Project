<%- include('../partials/header') %>
<body>
	<header>
		<h1>Edit Entry</h1>
	</header>
	<form action="/edit" method="POST">
		<input type="hidden" name="entryId" value="<%= entryId %>" />
		<label for="entry_title">Title</label>
		<input
			type="text"
			name="entry_title"
			value="<%= entryTitle %>"
			required
		/>
		<div class="form-group">
			<label class="content">Content</label>
			<textarea
				id="entry_content"
				name="entry_content"
				required
			>
				<%= entryContent %></textarea
			>
		</div>
		<button class="button" type="submit">Save Entry</button>
	</form>
	<button class="button">
		<a href="/dashboard">Cancel</a>
	</button>
</body>
